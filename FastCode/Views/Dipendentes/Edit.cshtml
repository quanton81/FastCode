@model Tuple<Dipendente, List<SelectListItem>>

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dipendente</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" name="Id" asp-for="Item1.Id" />
			<div class="form-group">
				<label asp-for="Item1.Nome" class="control-label"></label>
				<input name="Nome" asp-for="Item1.Nome" class="form-control" />
				<span asp-validation-for="Item1.Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item1.Matricola" class="control-label"></label>
				<input name="Matricola" asp-for="Item1.Matricola" class="form-control" />
				<span asp-validation-for="Item1.Matricola" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item1.Manager" class="control-label"></label>
				<select name="Manager" asp-for="Item1.Manager" asp-items="Model.Item2"></select>
				<span asp-validation-for="Item1.Manager" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
